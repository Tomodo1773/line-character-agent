# OpenAIのAPIキーをここに入力してください
OPENAI_API_KEY=sk-...

# CosmosDBのアカウントURLをここに入力してください
COSMOS_DB_ACCOUNT_URL=https://...

# CosmosDBのアカウントキーをここに入力してください
COSMOS_DB_ACCOUNT_KEY=...

# ローカルでCosmos Emulator(自己署名証明書)を使う場合は false、
# 本番/Azure Cosmos DB では true を推奨（もしくはCAバンドルのパスを指定）
COSMOS_DB_CONNECTION_VERIFY=true

SPAN_DAYS=7

# LINEチャネルアクセストークン（ダイジェスト再編成完了通知用）
LINE_CHANNEL_ACCESS_TOKEN=...

# LangSmithトレース用（オプション）
LANGSMITH_API_KEY=YOUR_LANGSMITH_API_KEY
LANGCHAIN_PROJECT=diary-rag # デフォルト値。ローカル環境では別の値を設定可能
