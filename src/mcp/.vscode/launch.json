{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Start Functions",
			"type": "debugpy",
			"request": "attach",
			"connect": {
				"host": "localhost",
				"port": 9091
			},
			"preLaunchTask": "func: host start"
		},
		{
			"name": "Docker: Attach to MCP",
			"type": "debugpy",
			"request": "attach",
			"connect": {
				"host": "localhost",
				"port": 5680
			},
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "/home/site/wwwroot"
				}
			]
		}
	]
}
