# 必須項目
LINE_CHANNEL_ACCESS_TOKEN="YOUR_LINE_CHANNEL_ACCESS_TOKEN"
LINE_CHANNEL_SECRET="YOUR_LINE_CHANNEL_SECRET"
LANGSMITH_API_KEY="YOUR_LANGSMITH_API_KEY"
LANGCHAIN_PROJECT="LINE-AI-BOT" # デフォルト値。ローカル環境では別の値を設定可能
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
OPENAI_COMPATIBLE_API_KEY="YOUR_OPENAI_COMPATIBLE_API_KEY"
MCP_FUNCTION_URL="YOUR_MCP_FUNCTION_URL"  # 例: http://localhost:7072/runtime/webhooks/mcp (ローカル) または https://your-mcp-function.azurewebsites.net/runtime/webhooks/mcp (本番)
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"
GOOGLE_OAUTH_REDIRECT_URI="YOUR_GOOGLE_OAUTH_REDIRECT_URI"
GOOGLE_TOKEN_ENC_KEY="YOUR_FERNET_KEY" # Base64 32bytes。Key Vaultのシークレットをマウントしてください。
POSTGRES_CHECKPOINT_URL="YOUR_POSTGRES_CHECKPOINT_URL"

# local起動時項目
# .azure配下の.envに設定する際は不要（bicepで値は自動取得される）
COSMOS_DB_ACCOUNT_URL="YOUR_COSMOS_DB_ACCOUNT_URL"
COSMOS_DB_ACCOUNT_KEY="YOUR_COSMOS_DB_ACCOUNT_KEY"
COSMOS_DB_CONNECTION_VERIFY="true"

# ローカル開発時のユーザーID固定値（オプション）
# 設定すると、LINE webhookから取得するuser_idをこの値で上書きします
# これにより本番とは別のGoogle DriveフォルダやOAuth認証情報を使用できます
# LOCAL_USER_ID="local-dev-user"
# LOCAL_LINE_USER_ID="Uxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # 実際のLINE user ID（OAuthコールバック時のpush_message用）
