{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: FastAPI",
			"type": "debugpy",
			"request": "launch",
			"module": "fastapi",
			"args": ["dev", "--entrypoint", "chatbot.main:app", "--host", "0.0.0.0", "--port", "8000"],
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/.env",
			"env": {
				"PYTHONPATH": "${workspaceFolder}/chatbot"
			}
		},
		{
			"name": "Python: Run Agent",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/chatbot/agent/character.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/.env",
			"env": {
				"PYTHONPATH": "${workspaceFolder}"
			}
		},
		{
			"name": "Docker: Attach to API",
			"type": "debugpy",
			"request": "attach",
			"connect": {
				"host": "localhost",
				"port": 5678
			},
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "/src"
				}
			]
		}
	]
}
