{
	"version": "0.2.0",
	"configurations": [
                {
                        "name": "Python: FastAPI",
                        "type": "debugpy",
                        "request": "launch",
                        "module": "fastapi",
                        "args": [
                                "run",
                                "chatbot.main:app",
                                "--reload",
                                "--host",
                                "0.0.0.0",
                                "--port",
                                "8000"
                        ],
                        "console": "integratedTerminal",
                        "cwd": "${workspaceFolder}",
                        "envFile": "${workspaceFolder}/.env",
			"env": {
				"PYTHONPATH": "${workspaceFolder}/chatbot"
			}
		},
		{
			"name": "Python: Run Agent",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/chatbot/agent/__init__.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/.env",
			"env": {
				"PYTHONPATH": "${workspaceFolder}"
			}
		}
	]
}
